<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-cengter">
                <div class="card-header text-center">
                    <h3>REGISTRO DE USUARIO</h3>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST" name="usuario">
                       <div class="form-group">
                         <input type="text" name="fullname" placeholder="Nombre completo" class="form-control" autofocus required>
                       </div>
                       <div class="form-group">
                         <input type="text" name="username" placeholder="Nombre de usuario" class="form-control" required>
                       </div>
                       <div class="form-group">
                         <input type="password" name="password" class="form-control" placeholder="Contraseña" required>
                       </div>
                       <div class="form-group">
                         <input type="password" name="repit_password" class="form-control" placeholder="Contraseña" required>
                       </div>
                       <div class="form-group">
                        <button class="btn btn-success btn-block">Registrar</button>
                       </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>