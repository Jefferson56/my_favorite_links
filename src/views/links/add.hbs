{{!-- Este es el formulario para registrar los links, se configura desde acá pero es indexado en la página main.hbs --}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3>REGISTRO DE LINK</h3>
                </div>
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Título" autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" class="form-control" placeholder="URL" required>
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Descripción" required></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>